<style>
/* Center the Contact Us title */
.content h1 {
    text-align: center;
}

/* Contact info layout */
.contact-info {
    display: flex;
    gap: 2rem; /* Space between text and map */
    justify-content: center; /* Center the items horizontally */
    align-items: center; /* Center items vertically */
    flex-wrap: wrap; /* Allows content to wrap on small screens */
    margin-top: 20px; /* Optional: Adds some space above the contact info */
}

/* Ensure the iframe scales on smaller screens */
.map-content iframe {
    max-width: 100%; /* Ensures iframe scales well on smaller screens */
    height: 350px; /* Set a fixed height for the map */
}

/* Style for the text content */
.text-content {
    flex: 1; /* Allow text content to take up available space */
    max-width: 500px; /* Optional: Limit text content width */
}

/* Make the "Phone", "Email", etc. headers bold and red */
.content strong {
    font-weight: bold; /* Make the text bold */
    color: #ed1b24ff; /* Set the text color to red */
}

/* Ensure the card text wraps and does not overflow */
.card .content {
    word-wrap: break-word; /* Prevent text from overflowing */
    overflow-wrap: break-word; /* Prevent text from overflowing */
    hyphens: auto; /* Automatically add hyphens if needed */
}

/* Media query to make layout responsive */
@media (max-width: 768px) {
    .contact-info {
        flex-direction: column; /* Stack text and map vertically on small screens */
        align-items: center; /* Center the items */
    }

    .map-content iframe {
        height: 250px; /* Reduce iframe size for smaller screens */
    }

    .card .content {
        padding-left: 10px; /* Optionally add some padding for small screens */
        padding-right: 10px; /* Optional: Add padding on smaller screens */
    }

    .card h1 {
      display;
    }

    .header {
      padding: 14px;
    }
}

</style>


