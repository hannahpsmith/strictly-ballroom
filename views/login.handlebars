<head>
  <title>Login and Create Account</title>
  <style>
    .form-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 50px;
    }
    
    .form-box {
      width: 300px;
      margin-bottom: 30px;
    }
    
    .button.is-red {
      background-color: red;
      border: none;
      color: white;
      padding: 0.5em 1em;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 1em;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <div class="form-box">
      <h1 class="title is-3 has-text-centered">Login</h1>
      <form action="/api/users/login" method="POST">
        <div class="field">
          <div class="control">
            <input class="input" type="email" name="email" placeholder="Email" required>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <input class="input" type="password" name="password" placeholder="Password" required>
          </div>
        </div>
        <div class="field has-text-centered">
          <button class="button is-red" type="submit">Login</button>
        </div>
      </form>
    </div>

    <div class="form-box">
      <h1 class="title is-3 has-text-centered">Create Account</h1>
      <form action="/api/users" method="POST">
        <div class="field">
          <div class="control">
            <input class="input" type="text" name="name" placeholder="Username" required>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <input class="input" type="email" name="email" placeholder="Email" required>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <input class="input" type="password" name="password" placeholder="Password" required>
          </div>
        </div>
        <div class="field has-text-centered">
          <button class="button is-red" type="submit">Create Account</button>
        </div>
      </form>
    </div>
  </div>
</body>